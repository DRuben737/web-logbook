{{ define "base" }}
{{$api := .API}}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="Web Logbook" />
        <meta name="author" content="github.com/vsimakhin/" />
        <title>{{ block "title" . }}{{ end }}</title>
        <link href="/static/css/styles.css" rel="stylesheet" />
        <script src="/static/js/all.min.js" crossorigin="anonymous"></script>
        {{ block "css" . }}{{ end }}
    </head>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" href="/">Web Logbook</a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <!-- Core-->
                            <div class="sb-sidenav-menu-heading">Core</div>
                            <a class="nav-link" href="{{$api.Logbook}}">
                                <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                                Logbook
                            </a>
                            <a class="nav-link" href="{{$api.Licensing}}">
                                <div class="sb-nav-link-icon"><i class="fas fa-certificate"></i></div>
                                Licensing
                            </a>
                            <a class="nav-link" href="{{$api.Stats}}">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-bar"></i></div>
                                Stats
                            </a>
                            <a class="nav-link" href="{{$api.Map}}">
                                <div class="sb-nav-link-icon"><i class="fas fa-map"></i></div>
                                Map
                            </a>
                            <!-- Addons-->
                            <div class="sb-sidenav-menu-heading">Addons</div>
                            <a class="nav-link" href="{{$api.Settings}}">
                                <div class="sb-nav-link-icon"><i class="fas fa-cogs"></i></div>
                                Settings
                            </a>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="text-muted">&copy; <a href="https://github.com/vsimakhin/web-logbook">Web Logbook</a></div>
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h3 class="mt-2">{{ block "title" . }}{{ end }}</h3>
                            <div class="card-body">
                              {{ block "content" . }}{{ end }}
                            </div>
                    </div>
                </main>

            </div>
        </div>
        <script src="/static/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="/static/js/scripts.js"></script>
        <script type="text/javascript" src="/static/js/jquery-3.6.0.min.js"></script>
        {{ block "js" . }}{{ end }}
    </body>
</html>
{{ end }}